<%= form_with model: task do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Title of your task" %>
  </div>

  <div class="mb-3">
    <%= form.label :details, class: "form-label" %>
    <%= form.text_area :details, class: "form-control", rows: 4, placeholder: "Add some details..." %>
  </div>

  <% if task.persisted? %>
    <div class="form-check mb-3">
      <%= form.check_box :completed, class: "form-check-input", id: "task_completed" %>
      <%= form.label :completed, "Completed", class: "form-check-label" %>
    </div>
  <% end %>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
