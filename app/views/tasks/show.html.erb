<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-2">
          <h1 class="h4 mb-0"><%= @task.title %></h1>

          <span class="badge <%= @task.completed? ? "bg-success" : "bg-warning text-dark" %>">
            <% if @task.completed? %>
              <i class="fa-solid fa-square-check me-1"></i> Completed
            <% else %>
              <i class="fa-regular fa-square me-1"></i> Not completed
            <% end %>
          </span>
        </div>

        <p class="mb-0"><%= simple_format(@task.details) %></p>
      </div>
    </div>

    <div class="d-flex justify-content-between">
      <div>
        <%= link_to tasks_path, class: "btn btn-outline-secondary me-2" do %>
          <i class="fa-solid fa-arrow-left me-1"></i> Back to list
        <% end %>

        <%= link_to edit_task_path(@task), class: "btn btn-outline-primary" do %>
          <i class="fa-regular fa-pen-to-square me-1"></i> Edit
        <% end %>
      </div>

      <%= link_to task_path(@task),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "btn btn-outline-danger" do %>
        <i class="fa-regular fa-trash-can me-1"></i> Delete
      <% end %>
    </div>
  </div>
</div>
